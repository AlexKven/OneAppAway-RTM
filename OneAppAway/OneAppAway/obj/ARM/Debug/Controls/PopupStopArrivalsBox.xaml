<UserControl
    x:Class="OneAppAway.PopupStopArrivalsBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OneAppAway"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" RequestedTheme="Dark">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#EE333333"/>
        <local:MultiStopArrivalsBox x:ConnectionId='1' x:Name="ArrivalsBox"                                            />
        <Polygon Grid.Row="1" Points="0, 0, 30, 30, 60, 0" Fill="#EE333333" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>

