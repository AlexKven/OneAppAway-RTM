<UserControl
    x:Class="OneAppAway._1_1.Views.Controls.AutoFitTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OneAppAway._1_1.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" x:Name="Self" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" SizeChanged="Self_SizeChanged">
    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" DataContext="{Binding ElementName=Self, Path=DataContext}" FontFamily="{Binding FontFamily}" FontWeight="{Binding FontWeight}" FontStyle="{Binding FontStyle}" x:Name="InnerBlock" FontSize="{Binding FontSize, Mode=OneTime}" TextWrapping="WrapWholeWords" SizeChanged="InnerBlock_SizeChanged"/>
</UserControl>
